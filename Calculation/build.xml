<project name="Calculator" default="run">
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>

    <target name="run" depends="compile">
        <java classname="Calculator" classpath="build/classes">
            <arg value="5"/>
            <arg value="+"/>
            <arg value="3"/>
        </java>
    </target>
</project>
